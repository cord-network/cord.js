{
  "extends": "./tsconfig.build.json",
  "include": ["packages/**/*", "jest-setup/*", "docs/*"],
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": true,
    "paths": {
      "@cord.network/network": ["network/src"],
      "@cord.network/config": ["config/src"],
      "@cord.network/modules": ["modules/src"],
      "@cord.network/messaging": ["messaging/src"],
      "@cord.network/sdk": ["sdk/src"],
      "@cord.network/types": ["types/src"],
      "@cord.network/utils": ["utils/src"],
      "@cord.network/vc-export": ["vc-export/src"],
      "@cord.network/docs": ["docs/src"],
    }
  },
  "skipLibCheck": true
}
