{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules/**/*",
    "lib/**/*",
    "./dist/**/*"
  ]
}
